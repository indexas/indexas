{
  "include": [
    "src/**/*",
  ],
  "compilerOptions": {
    "jsx": "react-jsx",
    "baseUrl": ".",
    "types": [
      "node",
      "jest",
    ],
    "typeRoots": [
      "./node_modules/@types",
    ],
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "target": "es2016",
    "module": "CommonJS",
    "rootDirs": [
      "src",
      "__test__"
    ],
    "declaration": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
  }
}