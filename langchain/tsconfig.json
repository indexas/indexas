{
  "include": ["src/**/*"],
  "compilerOptions": {
    "baseUrl": ".",
    "types": ["node", "jest"],
    "typeRoots": ["./node_modules/@types"],
    "paths": {
      "@/*": ["src/*"]
    },
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
