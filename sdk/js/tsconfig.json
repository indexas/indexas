{
  "include": ["src/**/*"],
  "compilerOptions": {
    "baseUrl": ".",
    "types": ["node"],
    "typeRoots": ["./node_modules/@types"],
    "paths": {
      "@/*": ["src/*"]
    },
    "target": "es2020",
    "module": "es2020",
    "rootDirs": ["src", "__test__"],
    "declaration": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  }
}
